file = {:C$\backslash$:/Users/jenis/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Schalk et al. - 2017 - Instantaneous voltage as an alternative to power- and phase-based interpretation of oscillatory brain activity.pdf:pdf},
