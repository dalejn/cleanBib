author = {Tooley, Ursula A. and Mackey, Allyson P. and Ciric, Rastko and Ruparel, Kosha and Moore, Tyler M. and Gur, Ruben C. and Gur, Raquel E. and Satterthwaite, Theodore D. and Bassett, Danielle S.},
