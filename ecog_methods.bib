pages = {186122},
title = {{A unified framework for dissecting the effects of common signals on functional and effective connectivity analyses: power, coherence, and Granger causality}},
url = {https://www.biorxiv.org/content/10.1101/186122v1},
year = {2017}
}
@article{Peterson2017,
