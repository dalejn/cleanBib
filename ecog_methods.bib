doi = {10.1101/159731},
file = {:C$\backslash$:/Users/jenis/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Dupre la Tour et al. - 2017 - Non-linear Auto-Regressive Models for Cross-Frequency Coupling in Neural Time Series.pdf:pdf},
